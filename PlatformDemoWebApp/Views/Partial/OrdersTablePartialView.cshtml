@model List<ClassLibrary.Entities.Order>
<div class="card">
    <div class="card-header">
        Orders
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Order Number</th>
                    <th scope="col">Amount</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].OrderNumber</td>
                        <td>$ @Model[i].Amount</td>
                    </tr>
                }
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="8">
                            <h5 class="text-center">No Orders Found.</h5>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>